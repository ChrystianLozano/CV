---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Chrystian Fabian Lozano Ramirez · CV</title>
    <meta
      name="description"
      content={`CV de ${cv.name}, desarrollador frontend especializado en React, Tailwind y Astro.`}
    />
    <meta name="robots" content="index,follow" />
    <meta name="author" content={cv.name} />
    <meta name="theme-color" content="#0a1222" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={`${cv.name} · CV`} />
    <meta
      property="og:description"
      content={`CV de ${cv.name}, desarrollador frontend especializado en React, Tailwind y Astro.`}
    />
    <meta property="og:locale" content="es_MX" />
    <meta property="twitter:card" content="summary" />
    <meta property="twitter:title" content={`${cv.name} · CV`} />
    <meta
      property="twitter:description"
      content={`CV de ${cv.name}, desarrollador frontend especializado en React, Tailwind y Astro.`}
    />
    <link rel="canonical" href="https://chrystian.dev/" />
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Person",
        name: cv.name,
        jobTitle: cv.role,
        description: cv.summary,
        email: "mailto:hola@chrystian.dev",
        address: {
          "@type": "PostalAddress",
          addressLocality: "Irapuato",
          addressRegion: "Guanajuato",
          addressCountry: "MX",
        },
      })}
    </script>
  </head>
  <body>
    <main>
      <header class="reveal">
        <div>
          <h2>Perfil</h2>
          <h1 class="typewriter">{cv.name}</h1>
          <div class="hero-title">{cv.role}</div>
          <p class="hero-summary">{cv.summary}</p>
          <div class="badge-list" style="margin-top: 1.3rem;">
            {cv.highlights.map((item) => <span class="badge">{item}</span>)}
          </div>
        </div>
        <aside class="contact-card reveal">
          <h2>Contacto</h2>
          {
            cv.contact.map((item) => (
              <div class="contact-item">
                <span class="contact-label">{item.label}</span>
                {item.href ? (
                  <a class="typewriter" href={item.href} target="_blank" rel="noreferrer">
                    {item.value}
                  </a>
                ) : (
                  <span class="typewriter">{item.value}</span>
                )}
              </div>
            ))
          }
        </aside>
      </header>

      <section class="reveal">
        <div class="section-grid">
          <h3 class="section-title typewriter">Experiencia</h3>
          <div class="list">
            {
              cv.experience.map((item) => (
                <article class="item reveal">
                  <h3 class="typewriter">{item.title}</h3>
                  <span class="typewriter">{item.meta}</span>
                  <ul>
                    {item.bullets.map((bullet) => (
                      <li class="typewriter">{bullet}</li>
                    ))}
                  </ul>
                </article>
              ))
            }
          </div>
        </div>
      </section>

      {
        cv.projects.length > 0 && (
          <section class="reveal">
            <div class="section-grid">
              <h3 class="section-title typewriter">Portafolio</h3>
              <div class="carousel">
                <div class="carousel-controls">
                  <button class="carousel-btn" type="button" data-dir="prev">
                    ◀
                  </button>
                  <button class="carousel-btn" type="button" data-dir="next">
                    ▶
                  </button>
                </div>
                <div class="carousel-track" aria-label="Proyectos">
                  {cv.projects.map((item) => (
                    <button
                      class="item reveal carousel-card"
                      type="button"
                      data-title={item.title}
                      data-meta={item.meta}
                      data-description={item.description}
                      data-image={item.image}
                      data-image-alt={item.imageAlt || item.title}
                    >
                      {item.image && (
                        <div class="carousel-media">
                          <img src={item.image} alt={item.imageAlt || item.title} loading="lazy" />
                        </div>
                      )}
                      <h3 class="typewriter">{item.shortTitle || item.title}</h3>
                      <span class="typewriter">{item.meta}</span>
                    </button>
                  ))}
                </div>
              </div>
            </div>
          </section>
        )
      }

      <section class="reveal">
        <div class="section-grid">
          <h3 class="section-title typewriter">Educación</h3>
          <div class="list">
            {
              cv.education.map((item) => (
                <article class="item reveal">
                  <h3 class="typewriter">{item.title}</h3>
                  <span class="typewriter">{item.meta}</span>
                  {item.bullets.length > 0 && (
                    <ul>
                      {item.bullets.map((bullet) => (
                        <li class="typewriter">{bullet}</li>
                      ))}
                    </ul>
                  )}
                </article>
              ))
            }
          </div>
        </div>
      </section>

      <section class="reveal">
        <div class="section-grid">
          <h3 class="section-title typewriter">Habilidades</h3>
          <div class="columns">
            <div class="item reveal">
              <h3 class="typewriter">Técnicas</h3>
              <div class="badge-list">
                {
                  cv.skills.tecnicas.map((skill) => (
                    <span class="badge typewriter">{skill}</span>
                  ))
                }
              </div>
            </div>
            <div class="item reveal">
              <h3 class="typewriter">Herramientas</h3>
              <div class="badge-list">
                {
                  cv.skills.herramientas.map((skill) => (
                    <span class="badge typewriter">{skill}</span>
                  ))
                }
              </div>
            </div>
            <div class="item reveal">
              <h3 class="typewriter">Backend</h3>
              <div class="badge-list">
                {
                  cv.skills.backend.map((skill) => (
                    <span class="badge typewriter">{skill}</span>
                  ))
                }
              </div>
            </div>
            <div class="item reveal">
              <h3 class="typewriter">CMS / SEO</h3>
              <div class="badge-list">
                {
                  cv.skills.cms.map((skill) => (
                    <span class="badge typewriter">{skill}</span>
                  ))
                }
              </div>
            </div>
            <div class="item reveal">
              <h3 class="typewriter">Sistemas Operativos</h3>
              <div class="badge-list">
                {
                  cv.skills.os.map((skill) => (
                    <span class="badge typewriter">{skill}</span>
                  ))
                }
              </div>
            </div>
          </div>
        </div>
      </section>

      {
        (cv.certifications.length > 0 || cv.languages.length > 0) && (
          <section class="reveal">
            <div class="section-grid">
              <h3 class="section-title typewriter">
                Certificaciones & Idiomas
              </h3>
              <div class="columns">
                {cv.certifications.length > 0 && (
                  <div class="item reveal">
                    <h3 class="typewriter">Certificaciones</h3>
                    <ul>
                      {cv.certifications.map((cert) => (
                        <li class="typewriter">{cert}</li>
                      ))}
                    </ul>
                  </div>
                )}
                {cv.languages.length > 0 && (
                  <div class="item reveal">
                    <h3 class="typewriter">Idiomas</h3>
                    <ul>
                      {cv.languages.map((lang) => (
                        <li class="typewriter">{lang}</li>
                      ))}
                    </ul>
                  </div>
                )}
              </div>
            </div>
          </section>
        )
      }

      <footer class="reveal typewriter">
        Última actualización: Febrero 2026 · CV de Chrystian Fabian Lozano
        Ramirez - Hecho en Astro con ❤️
      </footer>
    </main>
    <div class="modal" id="project-modal" aria-hidden="true">
      <div class="modal-backdrop" data-close></div>
      <div class="modal-card" role="dialog" aria-modal="true" aria-labelledby="modal-title">
        <button class="modal-close" type="button" data-close aria-label="Cerrar">
          ✕
        </button>
        <div class="modal-media">
          <img src="" alt="" />
        </div>
        <div class="modal-body">
          <h3 id="modal-title"></h3>
          <span id="modal-meta"></span>
          <p id="modal-description"></p>
        </div>
      </div>
    </div>
    <script is:inline>
      const elements = document.querySelectorAll(".reveal");
      const prefersReduced = window.matchMedia(
        "(prefers-reduced-motion: reduce)",
      ).matches;
      const typeElement = (el, speed = 16) => {
        if (!el) return;
        if (el.dataset.typed === "true" || el.dataset.typing === "true") return;
        el.dataset.typing = "true";
        const text = el.dataset.text ?? el.textContent ?? "";
        el.dataset.text = text;
        el.textContent = "";
        let i = 0;
        const tick = () => {
          el.textContent = text.slice(0, i);
          i += 1;
          if (i <= text.length) {
            requestAnimationFrame(() => setTimeout(tick, speed));
          } else {
            el.dataset.typed = "true";
            el.dataset.typing = "false";
          }
        };
        tick();
      };

      const typeInside = (root) => {
        const targets = root.classList.contains("typewriter")
          ? [root]
          : Array.from(root.querySelectorAll(".typewriter"));
        targets.forEach((el) => typeElement(el));
      };

      if (prefersReduced) {
        elements.forEach((el) => el.classList.add("is-visible"));
        document.querySelectorAll(".typewriter").forEach((el) => {
          el.dataset.typed = "true";
        });
      } else {
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.add("is-visible");
                typeInside(entry.target);
                observer.unobserve(entry.target);
              }
            });
          },
          { threshold: 0.15, rootMargin: "0px 0px -10% 0px" },
        );

        elements.forEach((el) => observer.observe(el));
        typeElement(document.querySelector("h1.typewriter"), 18);
      }

      const track = document.querySelector(".carousel-track");
      if (track) {
        document.querySelectorAll(".carousel-btn").forEach((btn) => {
          btn.addEventListener("click", () => {
            const dir = btn.dataset.dir === "next" ? 1 : -1;
            const card = track.querySelector(".carousel-card");
            const amount = card ? card.offsetWidth + 18 : 300;
            track.scrollBy({ left: dir * amount, behavior: "smooth" });
          });
        });
      }

      const modal = document.querySelector("#project-modal");
      const modalTitle = document.querySelector("#modal-title");
      const modalMeta = document.querySelector("#modal-meta");
      const modalDesc = document.querySelector("#modal-description");
      const modalImg = modal?.querySelector(".modal-media img");

      const openModal = (card) => {
        if (!modal) return;
        modalTitle.textContent = card.dataset.title || "";
        modalMeta.textContent = card.dataset.meta || "";
        modalDesc.textContent = card.dataset.description || "";
        const img = card.dataset.image;
        const alt = card.dataset.imageAlt || card.dataset.title || "";
        if (img && modalImg) {
          modalImg.src = img;
          modalImg.alt = alt;
          modalImg.closest(".modal-media").style.display = "block";
        } else if (modalImg) {
          modalImg.closest(".modal-media").style.display = "none";
        }
        modal.setAttribute("aria-hidden", "false");
        document.body.classList.add("modal-open");
      };

      const closeModal = () => {
        if (!modal) return;
        modal.setAttribute("aria-hidden", "true");
        document.body.classList.remove("modal-open");
      };

      document.querySelectorAll(".carousel-card").forEach((card) => {
        card.addEventListener("click", () => openModal(card));
      });

      modal?.querySelectorAll("[data-close]").forEach((el) => {
        el.addEventListener("click", closeModal);
      });

      document.addEventListener("keydown", (event) => {
        if (event.key === "Escape") closeModal();
      });
    </script>
  </body>
</html>
